<div class="row justify-content-center">
  <div class="container-expenses">
      <div class ="navbar-expenses">
        <div class="add-expense">
          New
            <%= link_to "income", new_user_transaction_path(current_user, @transaction, elem:"income"),
              data: {bs_toggle:"modal", bs_target:"#incomeModal"}, remote: true, class:"click-me"%>

            <%= link_to "expense", new_user_transaction_path(current_user, @transaction,  elem: "expense"),
              data: {bs_toggle:"modal", bs_target:"#expenseModal"}, remote: true, class:"click-me"%>

            <div class="modal fade my_target" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                    </div>
                </div>
            </div>
        </div>
        <div class="time-selection">
          <button class="button-chevron" > < </button>
          <button class="button-time"> Month </button>
          <button class="button-chevron"> > </button>
        </div>
      </div>
      <div class="table-expenses">
          <div>Filter by...</div>
          <div class = "income-expense">
            <%= button_to "income", user_transactions_path, method: :get, params: {query: "Income"} %>
            <%= button_to "expenses", user_transactions_path, method: :get, params: {query: "Expense"} %>
            <%= button_to "all", user_transactions_path, method: :get, params: {query: "all"} %>
          </div>
      </div>

       <%= render @transactions%>

       <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
          <div class="modal-dialog">
              <div class="modal-content">
              </div>
          </div>
        </div>

      <div class="footer-expenses">
        <div>My balance</div>
        <div>
          <%= extract_values(@transactions).reduce(:+) %>
        </div>
      </div>
    </div>
  </div>
</div>
