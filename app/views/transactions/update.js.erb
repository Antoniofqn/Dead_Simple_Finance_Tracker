<% if @transaction.errors.any? %>
  $("#editModal .modal-content").html('<%= j render "edit", transaction: @transaction %>');
<% else %>
  $("#editModal").modal('hide');
  $('div[data-user-id="' + <%= @transaction.id %> + '"]' ).replaceWith('<%= j render "transactions/transaction", transaction: @transaction %>')

  <% if @changed && @transaction.type_transaction == "Income"%>
    $('div[data-user-id="' + <%= @transaction.id %> + '"]' ).addClass('edited-income');
  <% end %>
  <% if @changed && @transaction.type_transaction == "Expense"%>
    $('div[data-user-id="' + <%= @transaction.id %> + '"]' ).addClass('edited-expense');
  <% end %>
<% end %>
