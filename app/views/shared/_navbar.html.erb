<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" id="nav">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://res.cloudinary.com/dmtwwkxzz/image/upload/v1647268176/Logo-_1_akxw7e.png", class: "m-0 p-0", style: "width: 50px; height: 50px;" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", user_path(current_user), class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= navbar_avatar_has_photo?(current_user) %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Expenses", user_transactions_path(current_user), class: "dropdown-item" %>
              <%= link_to "Stats", stats_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link btn btn-secondary" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
