<form>
  <div>
    <h2>Compound Interest Calculator</h2>
    <P style="color:blue;"><strong>Principal Amount:</strong><input type="text" id="getPrincipalValue" name="principal"  placeholder="Principal" ></P>
    <P style="color:blue;"><strong>Anual Interest Rate:</strong><input type="text" id="getInterestRate" name="interest"  placeholder="Interest Rate" ></P>
    <P style="color:blue;"><strong>Compound (n):</strong> <input type="text" id="getTiming" name="timing"  placeholder="number of time paid" ></P>
    <P style="color:blue;"><strong>Time (in years) :</strong><input type="text" id="getYear" name="year"  placeholder="Year" ></P>
    <P>
    <input type="button" value="Calculate" id="" onclick="compoundInterest(this.principal , this.interest , this.timing , this.year);"/></P>
  </div>
</form>


<p id="outputPrincipal"> </p>
<p id="outputInterest"> </p>
<p id="outputYear"> </p>
<p id="outputtime"> </p>
<p id="compounded"> </p>

<script type="text/javascript">
  function compoundInterest(principal, interest , timing, years) {
    let principal = document.getElementById("getPrincipalValue").value;
    let interest = document.getElementById("getInterestRate").value;
    let timing = document.getElementById("getTiming").value;
    let years = document.getElementById("getYear").value;

  let interest_rate = interest/100
  let resultCompound  = principal * Math.pow(1 + interest_rate/timing, timing*years);

    document.getElementById("outputPrincipal").innerHTML = "Principal Enter is " + principal;
    document.getElementById("outputInterest").innerHTML = "Interest Enter is " + interest;
    document.getElementById("outputInterest").innerHTML = "Number of Years Enter " + timing;
    document.getElementById("outputtime").innerHTML = "Number of time interestpaid per year " + years;
    document.getElementById("compounded").innerHTML = "Interest Plus Principal " + resultCompound;
  }
</script>
