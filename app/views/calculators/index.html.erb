<div class="container mt-3 mb-3">
  <div class="row justify-content-around">
    <div class="card p-2 col-5" style="border-radius: 20px; height: fit-content;">
      <form id="compound">
        <h2>Compound Interest Calculator</h2>
        <P style="color:blue;"><strong>Principal Amount:</strong><input type="text" id="getPrincipalValue" name="principal"  placeholder="Principal" class="form-control" ></P>
        <P style="color:blue;"><strong>Anual Interest Rate (%):</strong><input type="text" id="getInterestRate" name="interest"  placeholder="Interest Rate" class="form-control" ></P>
        <P style="color:blue;"><strong>Compound:</strong> <input type="text" id="getTiming" name="timing"  placeholder="number of time paid" class="form-control" ></P>
        <P style="color:blue;"><strong>Time (in years) :</strong><input type="text" id="getYear" name="year"  placeholder="Year" class="form-control" ></P>
        <P>
        <input type="button" value="Calculate" id="" onclick="compoundInterest();" class="btn btn-primary" style="border-radius: 20px;"/></P>
        <p id="outputPrincipal"> </p>
        <p id="outputInterest"> </p>
        <p id="outputYear"> </p>
        <p id="outputtime"> </p>
        <p id="compounded"> </p>
        <p id="summary"></p>
      </form>
    </div>

    <div class="card p-2 col-5" style="border-radius: 20px; height: fit-content;">
      <form id="compound">
        <h2>Simple Interest Calculator</h2>
        <P style="color:blue;"><strong>Principal Amount:</strong><input type="text" id="getPrincipalValueSimple" name="principal"  placeholder="Principal" class="form-control" ></P>
        <P style="color:blue;"><strong>Anual Interest Rate (%):</strong><input type="text" id="getInterestRateSimple" name="interest"  placeholder="Interest Rate" class="form-control" ></P>
        <P style="color:blue;"><strong>Time (in months) :</strong><input type="text" id="getMonthSimple" name="month"  placeholder="Months" class="form-control" ></P>
        <P>
        <input type="button" value="Calculate" id="" onclick="simpleInterest();" class="btn btn-primary" style="border-radius: 20px;"/></P>
        <p id="outputInterestSimple"> </p>
        <p id="summarySimple"></p>
      </form>
    </div>
  </div>
  <div class="d-flex justify-content-around">
    <div>
    </div>
    <div>

    </div>
  </div>
</div>


<script type="text/javascript">
  function compoundInterest() {
    let principal = document.getElementById("getPrincipalValue").value;
    let interest = document.getElementById("getInterestRate").value;
    let timing = document.getElementById("getTiming").value;
    let years = document.getElementById("getYear").value;

    let interest_rate = interest/100
    let resultCompound  = principal * Math.pow(1 + interest_rate/timing, timing*years);


    document.getElementById("outputPrincipal").innerHTML = "Principal is " + principal;
    document.getElementById("outputInterest").innerHTML = "Interest is " + interest + "%";
    document.getElementById("outputYear").innerHTML = "Number of Years:" + years;
    document.getElementById("outputtime").innerHTML = "Number of time interest paid per year: " + timing;
    document.getElementById("compounded").innerHTML = "Interest Plus Principal: " + Math.round(resultCompound * 100)/100;
    document.getElementById("summary").innerHTML = "The total amount accrued, principal plus interest, with compound interest on a principal of " + principal + " at a rate of " + interest + "% per year compounded " + timing + " times per year over " + years + " years is $" + Math.round(resultCompound * 100)/100;
  }

  function simpleInterest() {
    let principal = document.getElementById("getPrincipalValueSimple").value;
    let interest = document.getElementById("getInterestRateSimple").value;
    let months = document.getElementById("getMonthSimple").value;

    let interest_rate = interest/100
    let monthYear = months/12
    let resultSimple  = principal * interest_rate * monthYear

    document.getElementById("outputInterestSimple").innerHTML = "Interest is " + interest + "%";
    document.getElementById("summarySimple").innerHTML = "The simple interest accumulated on a principal of $ " + principal + " at a rate of " + interest + "% per year for " + monthYear + " years (" + months + " months) is $" + Math.round(resultSimple * 100)/100;
  }
</script>
