<%= simple_form_for([current_user, transaction],remote: true) do |f| %>
  <%= f.input :date, start_year: Date.today.year - 10, end_year: Date.today.year %>
  <%= f.input :value, label: "Amount", as: :string, input_html: { data: {mask_target: "value", action:"keyup->mask#format"}, value:"0,00", maxlength: 20} %>
  <%= f.input :type_transaction, :as => :hidden, :input_html => { :value => "Expense"} %>
  <%= f.input :category, collection: Transaction::EXPENSE_CATEGORIES  %>
  <%= f.input :tag %>
  <%= f.button :submit, "Create Expense", class: "btn btn-primary",  "data-mask-target":"submit", "data-action":"click->mask#send" %>
<% end %>
